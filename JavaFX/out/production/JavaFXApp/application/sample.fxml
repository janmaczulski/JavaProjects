    <fx:script>
        var System = Java.type("java.lang.System")
        var next = 0;
            function getZyczenia(imie, strategia, szablon){
                var zyczenia = "";
                var lines = ["",""];
                if(szablon.equals("Urodziny"))
                {
                    lines = java.nio.file.Files.readAllLines(java.nio.file.Paths.get("./Urodziny.txt"));
                }
                else
                {
                    lines = java.nio.file.Files.readAllLines(java.nio.file.Paths.get("./Imieniny.txt"));
                }
                var random = Math.floor(Math.random() * lines.length);

                if(strategia.equals("Kolejno"))
                {
                    zyczenia = lines[next].replace(/%/, imie);
                    next = next + 1;
                    if(next >= lines.length)
                    {
                        next = 0;
                    }
                }
                else
                {
                    zyczenia = lines[random].replace(/%/, imie);
                }
                return zyczenia;
            }
            function buttonAction(event){
                textArea.setText(getZyczenia(nameField.getText(),strategy.getSelectionModel().getSelectedItem(),pattern.getSelectionModel().getSelectedItem()));
            }
    </fx:script>
